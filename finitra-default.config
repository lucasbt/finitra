# =============================================================================
# finitra-default.config
# Default configuration for finitra
# Copy to ~/.config/finitra/finitra.config to override
# =============================================================================

# --- Base directories ---
SETUP_DIR="${HOME}/.local/share/finitra"
CONFIG_DIR="${HOME}/.config/finitra"
CACHE_DIR="${HOME}/.cache/finitra"
LOG_FILE="${CACHE_DIR}/finitra.log"
WALLPAPERS_DIR="${HOME}/Pictures/walls"

# --- Target user (auto-detected at runtime) ---
SETUP_USER="${SETUP_USER:-}"
SETUP_HOME="${SETUP_HOME:-}"

INSTALL_WALLPAPERS=true

# =============================================================================
# DNF
# =============================================================================
DNF_MAX_PARALLEL=10
DNF_KEEPCACHE=false

# =============================================================================
# RPM Fusion
# =============================================================================
ENABLE_RPMFUSION_FREE=true
ENABLE_RPMFUSION_NONFREE=true

# =============================================================================
# Flatpak / Flathub
# =============================================================================
ENABLE_FLATHUB=true

# =============================================================================
# Multimedia
# =============================================================================
INSTALL_MULTIMEDIA=true

# =============================================================================
# Mise — Runtime version manager
# =============================================================================
MISE_JAVA_21="java@21"
MISE_JAVA_25="java@25"
MISE_NODE="node@lts"
MISE_PYTHON="python@latest"
MISE_GOLANG="go@latest"

# =============================================================================
# GNOME — Theme and Appearance
# =============================================================================

# Color scheme: 'prefer-dark' | 'prefer-light' | 'default'
GNOME_COLOR_SCHEME='prefer-dark'

# GTK theme (must be installed on the system)
GNOME_GTK_THEME='Adwaita-dark'

# Icon theme
GNOME_ICON_THEME='Adwaita'

# Text scaling factor (1.0 = default, 1.15 = 15% larger)
GNOME_TEXT_SCALE=1.15

# Fonts (name + size)
GNOME_FONT_UI='Noto Sans 11'
GNOME_FONT_DOCUMENT='Noto Sans 11'
GNOME_FONT_MONO='JetBrains Mono 11'

# Blinking cursor: true | false  (false reduces distraction/anxiety)
GNOME_CURSOR_BLINK=false

# Interface animations: true | false
GNOME_ANIMATIONS=true

# =============================================================================
# GNOME — Night Light (eye comfort)
# =============================================================================

# Enable Night Light: true | false
GNOME_NIGHT_LIGHT_ENABLED=true

# Color temperature in Kelvin (lower = warmer/more orange)
# 6500 = daylight | 4000 = neutral | 3700 = warm | 2700 = amber
GNOME_NIGHT_LIGHT_TEMPERATURE=3700

# Automatic schedule (uses sunrise/sunset): true | false
GNOME_NIGHT_LIGHT_AUTO=false

# Manual schedule start and end (used when AUTO=false)
# Decimal format: 18.5 = 18:30 | 8.0 = 08:00
GNOME_NIGHT_LIGHT_FROM=18.0
GNOME_NIGHT_LIGHT_TO=8.0

# =============================================================================
# GNOME — Workspaces
# =============================================================================

# Dynamic workspaces: true | false (false = fixed number)
GNOME_DYNAMIC_WORKSPACES=false

# Number of workspaces (used when dynamic = false)
GNOME_NUM_WORKSPACES=4

# Workspaces on primary monitor only: true | false
GNOME_WORKSPACES_PRIMARY_ONLY=true

# =============================================================================
# GNOME — Window buttons and layout
# =============================================================================

# Title bar button layout
GNOME_BUTTON_LAYOUT='appmenu:minimize,maximize,close'

# =============================================================================
# GNOME — Power and sleep
# =============================================================================

# Time to suspend when on AC power (seconds; 0 = never)
GNOME_SLEEP_AC_TIMEOUT=1800

# Time to suspend on battery (seconds; 0 = never)
GNOME_SLEEP_BATTERY_TIMEOUT=600

# Dim screen automatically when idle: true | false
GNOME_IDLE_DIM=true

# Automatic brightness via ambient light sensor: true | false
# (disabled by default — intrusive with eye sensitivity)
GNOME_AMBIENT_BRIGHTNESS=false

# =============================================================================
# GNOME — Touchpad
# =============================================================================

# Tap to click: true | false
GNOME_TOUCHPAD_TAP_CLICK=true

# Two-finger scrolling: true | false
GNOME_TOUCHPAD_TWO_FINGER_SCROLL=true

# Natural (reverse) scrolling: true | false
GNOME_TOUCHPAD_NATURAL_SCROLL=false

# =============================================================================
# GNOME — Nautilus (file manager)
# =============================================================================

# Default view mode: 'list-view' | 'icon-view'
GNOME_NAUTILUS_VIEW='list-view'

# Show hidden files by default: true | false
GNOME_NAUTILUS_SHOW_HIDDEN=false

# =============================================================================
# GNOME — Terminal (legacy, kept for compatibility)
# =============================================================================

# Terminal theme variant: 'dark' | 'light' | 'system'
GNOME_TERMINAL_THEME='dark'

# Show menu bar: true | false
GNOME_TERMINAL_MENUBAR=false

# =============================================================================
# GNOME — Privacy
# =============================================================================

# Remember recent files: true | false
GNOME_PRIVACY_RECENT_FILES=true

# How many days to keep recent files (days; -1 = always)
GNOME_PRIVACY_RECENT_FILES_AGE=30

# Automatically remove old temporary files: true | false
GNOME_PRIVACY_REMOVE_TEMP=true

# Maximum age of temporary files before removal (days)
GNOME_PRIVACY_OLD_FILES_AGE=30

# =============================================================================
# Ptyxis Terminal — default terminal on Fedora 41+
# =============================================================================

# --- App-level (org.gnome.Ptyxis) ---

# Interface style: 'system' | 'light' | 'dark'
PTYXIS_INTERFACE_STYLE='dark'

# Tab bar visibility: 'always' | 'needed' | 'never'
PTYXIS_TAB_BAR_POLICY='needed'

# Restore session on open: true | false
PTYXIS_RESTORE_SESSION=false

# Audible bell: true | false
PTYXIS_AUDIBLE_BELL=false

# New tab position: 'next' | 'last'
PTYXIS_NEW_TAB_POSITION='last'

# --- Profile-level (org.gnome.Ptyxis.Profile) ---
# Applied to the default profile detected at runtime.

# Color palette name (as shown in Ptyxis preferences)
# Examples: 'GNOME' | 'One Half Black' | 'Everforest' | 'Dracula' |
#           'Catppuccin Mocha' | 'Nord' | 'Solarized Dark' | 'Tokyo Night'
PTYXIS_PALETTE='One Half Black'

# Use system font: true | false (false = use PTYXIS_FONT_NAME)
PTYXIS_USE_SYSTEM_FONT=false

# Terminal font (used when PTYXIS_USE_SYSTEM_FONT=false)
PTYXIS_FONT_NAME='JetBrains Mono 12'

# Scrollback lines (-1 = unlimited)
PTYXIS_SCROLLBACK_LINES=10000

# Background opacity (1.0 = opaque, 0.85 = 15% transparent)
PTYXIS_OPACITY=1.0

# Bright bold text: true | false
PTYXIS_BOLD_IS_BRIGHT=true

# Use login shell: true | false
PTYXIS_LOGIN_SHELL=true

# =============================================================================
# Performance / SSD
# =============================================================================

# Swap aggressiveness (0-100; lower = more RAM, less swap)
VM_SWAPPINESS=10

# Enable weekly SSD TRIM: true | false
ENABLE_SSD_TRIM=true

# Maximum systemd journal size
JOURNALD_MAX_SIZE="100M"

# Maximum number of journal files
JOURNALD_MAX_FILES=5

# =============================================================================
# LocalSearch / Tracker — Indexing
# =============================================================================

# Disable user file indexing (heavy on older hardware): true | false
LOCALSEARCH_DISABLE_FILES=true

# Disable music indexer: true | false
LOCALSEARCH_DISABLE_MUSIC=true

# Disable photo indexer: true | false
LOCALSEARCH_DISABLE_PHOTOS=true

# Reset DB: true | false
LOCALSEARCH_RESET_DB=true

# =============================================================================
# Podman
# =============================================================================

# Create docker=podman alias: true | false
PODMAN_DOCKER_ALIAS=true

# =============================================================================
# Starship — Shell prompt
# =============================================================================

# Install Starship: true | false
INSTALL_STARSHIP=true
